<article class="card mt-3 form-control-lg" style="border-color: #118098">
  <div class="card-body">
    <section>
      <p class="my-2">
        <%= task.title %>
      </p>
      <p class="my-2">
        <%= task.start_time %>
      </p>
      <p class="my-2">
        <%= task.end_time %>
      </p>
    </section>

    <%= link_to 'Show',
                user_task_path(task),
                class: 'btn text-white',
                style: "background-color: #6610f2;" %>
  </div>
</article>
