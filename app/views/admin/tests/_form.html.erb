<%= form_with model: [:admin, @task, @test], class: 'form', data: {turbo: false} do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control mb-3' %>

    <%= f.label :level, class: 'form-label' %>
    <%= f.number_field :level, class: 'form-control mb-3' %>

    <%= f.label :time_limit, class: 'form-label' %>
    <%= f.number_field :time_limit, class: 'form-control mb-3' %>

    <%= f.label :category_id, class: 'form-label' %>
    <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: true }, class: 'form-select' %>
  </div>

  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
