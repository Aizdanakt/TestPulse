<%= form_with model: [:admin, @task], class: 'form', data: { turbo: false } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control mb-3' %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_field :description, class: 'form-control mb-3' %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, class: 'form-label' %>
    <%= f.datetime_field :start_time, class: 'form-control mb-3' %>
  </div>

  <div class="form-group">
    <%= f.label :end_time, class: 'form-label' %>
    <%= f.datetime_field :end_time, class: 'form-control mb-3' %>
  </div>

  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
