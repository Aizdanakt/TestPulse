<article class="card mt-3">
  <div class="card-body">
    <section>
      <p class="my-2">
        Title: <%= essay.title %>
      </p>
      <p class="my-2">
        Description: <%= essay.description %>
      </p>
      <p>
        <img src="<%= essay.image_url %>">
      </p>
    </section>

    <%= link_to 'Show', admin_essay_path(essay), class: 'btn btn-primary' %>
    <%= link_to 'Update', edit_admin_essay_path(essay), class: 'btn btn-warning' %>
    <%= link_to "Delete", admin_essay_path(essay), class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
  </div>
</article>
