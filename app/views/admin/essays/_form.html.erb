<%= form_with model: [:admin, @task, @essay], class: 'form', data: {turbo: false} do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control mb-3' %>

    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control mb-3', rows: 2 %>

    <%= f.label :min_length, class: 'form-label' %>
    <%= f.number_field :min_length, class: 'form-control mb-3' %>

    <%= f.label :image_url, class: 'form-label' %>
    <%= f.text_field :image_url, class: 'form-control mb-3' %>

    <%= f.label :time_limit, class: 'form-label' %>
    <%= f.number_field :time_limit, class: 'form-control mb-3' %>
  </div>

  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
