<div class="container">
  <h1>Информация о студенте <%= @student.name %></h1>

  <% @student.user_passed_tests.each do |passed_test| %>
    <div class="accordion" id="accordion<%= passed_test.id %>">
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= passed_test.id %>">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= passed_test.id %>" aria-expanded="true" aria-controls="collapse<%= passed_test.id %>">
            <%= passed_test.test.title %>
          </button>
        </h2>
        <div id="collapse<%= passed_test.id %>" class="accordion-collapse collapse" aria-labelledby="heading<%= passed_test.id %>" data-bs-parent="#accordion<%= passed_test.id %>">
          <div class="accordion-body">
            <ul class="list-group">
              <% passed_test.test.questions.each do |question| %>
                <li class="list-group-item">
                  <%= question.body %>
                  <ul>
                    <% question.answers.each do |answer| %>
                      <span class='<%= 'text-success' if answer.correct %>'><%= answer.body %></span><br>
                    <% end %>
                  </ul>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
