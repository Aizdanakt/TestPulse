<div class="dropdown">
  <% if user_signed_in? %>
    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
      Меню
    </button>

    <% if current_user.admin? %>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
        <li><%= link_to 'Таски', admin_tasks_path, class: 'dropdown-item' %></li>
        <li><%= link_to 'Студенты', admin_students_path, class: 'dropdown-item' %></li>
        <li><%= link_to 'Страница студента', '/', class: 'dropdown-item' %></li>
        <li><%= link_to 'Создать студента', new_user_registration_path, class: 'dropdown-item' %></li>
        <li><%= link_to 'Выйти', destroy_user_session_path,
                        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                        class: 'nav-link text-dark' %></li>
      </ul>
    <% else %>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
        <li><%= link_to 'Главная страница', '/', class: 'dropdown-item' %></li>
        <li><%= link_to 'Мой архив', archive_user_tasks_path, class: 'dropdown-item' %></li>
        <li><%= link_to 'Выйти', destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'nav-link text-dark' %></li>
      </ul>
    <% end %>

  <% else %>
    <ul class="navbar-nav mx-3">
      <li class="nav-item">
        <%= link_to "Войти", user_session_path, class: 'nav-link text-dark' %>
      </li>
    </ul>
  <% end %>
</div>
