<div class="dropdown">
  <% if user_signed_in? %>
    <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
      <%= t('.header') %>
    </button>

      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
        <% if current_user.admin? %>
        <li><%= link_to t('.tasks'), admin_tasks_path, class: 'dropdown-item' %></li>
        <li><%= link_to t('.students'), admin_students_path, class: 'dropdown-item' %></li>
        <li><%= link_to t('.students_page'), '/', class: 'dropdown-item' %></li>
        <li><%= link_to t('.create_student'), new_user_registration_path, class: 'dropdown-item' %></li>
        <% else %>
        <li><%= link_to t('.main_page'), '/', class: 'dropdown-item' %></li>
        <li><%= link_to t('.my_archive'), archive_user_tasks_path, class: 'dropdown-item' %></li>
        <% end %>
        <li><%= link_to t('.exit'), destroy_user_session_path,
                        data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                        class: 'dropdown-item' %></li>
      </ul>

  <% else %>
    <ul class="navbar-nav mx-3">
      <li class="nav-item">
        <%= link_to t('.login'), user_session_path, class: 'nav-link text-dark' %>
      </li>
    </ul>
  <% end %>
</div>
